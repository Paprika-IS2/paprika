<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Info</th>
      <th>Calories</th>
      <th>Fat calories</th>
      <th>Cholesterol</th>
      <th>Sodium</th>
      <th>Sugar</th>
      <th>Protein</th>
      <th>Carbohydrates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.photo %></td>
        <td><%= ingredient.info %></td>
        <td><%= ingredient.calories %></td>
        <td><%= ingredient.fat_calories %></td>
        <td><%= ingredient.cholesterol %></td>
        <td><%= ingredient.sodium %></td>
        <td><%= ingredient.sugar %></td>
        <td><%= ingredient.protein %></td>
        <td><%= ingredient.carbohydrates %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>
