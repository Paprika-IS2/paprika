<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Cook time</th>
      <th>Calories</th>
      <th>Score</th>
      <th>Created</th>
      <th>Type dish</th>
      <th>Type food</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.user %></td>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.calories %></td>
        <td><%= recipe.score %></td>
        <td><%= recipe.created %></td>
        <td><%= recipe.type_dish %></td>
        <td><%= recipe.type_food %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
